class Student:
    def __init__(self, name, age, course):
        self.name = name
        self.age = age
        self.course = course

    def introduce(self):
        print(f"Hi, my name is {self.name}, I am {self.age} years old, and I am studying {self.course}.")

student1 = Student("Johnel", 20, "Information Technology")
student2 = Student("Jevince", 22, "Hotel Management")
student3 = Student("Adam", 19, "Tourism")

student1.introduce()
student2.introduce()
student3.introduce()
